<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisualBoxManager.CreateMove">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create Move"  XAlign="Center"/>
            <Entry x:Name="entryMoveName" Placeholder="Name" />
            <Label x:Name="labelErrMoveName" TextColor="Red" />

            <StackLayout Orientation="Horizontal" >
                <Button x:Name="btnCancel" Text="Cancel" Clicked="OnCancel"/>
                <Button x:Name="btnSave" Text="Save" Clicked="OnSave"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>